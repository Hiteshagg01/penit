<%- include("partials/header.ejs") %> <% if (locals.pen) { %>

<form class="write" action="/edit/<%= pen.id %>" method="post">
  <h2>Edit Post</h2>
  <input
    type="text"
    name="title"
    placeholder="Title"
    value="<%= pen.title %>"
  />
  <textarea name="content" placeholder="Content" rows="10">
    <%= pen.content %>
  </textarea>
  <input
    type="text"
    name="category"
    placeholder="Category"
    value="<%= pen.category %>"
  />
  <input type="submit" value="Edit Pen" />
</form>

<% } else {%>

<form class="write" action="/write" method="post">
  <h2>Create a post</h2>
  <input type="text" name="title" placeholder="Title" required />
  <textarea name="content" placeholder="Content" rows="10" required></textarea>
  <input type="text" name="category" , placeholder="Category" required />
  <input type="submit" value="Submit Pen" />
</form>

<% } %> <%- include("partials/footer.ejs") %>
